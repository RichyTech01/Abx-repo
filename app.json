{
  "expo": {
    "name": "abx",
    "slug": "abx-mobile-app",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/Images/abx-icon.png",
    "scheme": "abxmobileapplication",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/Images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#0C513F"
    },
    "newArchEnabled": true,
    "extra": {
      "GET_ADDRESS_API_KEY": "LmRcb8Qk50mEojODY5sv3w46906",
      "router": {},
      "eas": {
        "projectId": "8e52f21a-83fe-434f-ab77-05345693e72a"
      }
    },
    "notification": {
      "icon": "./assets/Images/abx-icon.png",
      "color": "#0C513F",
      "androidMode": "default",
      "androidCollapsedTitle": "#{unread_notifications} new notifications"
    },

    "ios": {
      "usesAppleSignIn": true,
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby stores.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"]
      },
      "bundleIdentifier": "com.henry23.abxmobileapp",
      "scheme": "abxmobileapplication"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.POST_NOTIFICATIONS"
      ],

      "adaptiveIcon": {
        "foregroundImage": "./assets/Images/abx-icon.png",
        "backgroundColor": "#0C513F"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.henry23.abxmobileapp",
      "softwareKeyboardLayoutMode": "resize",
      "useNextNotificationsApi": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/Images/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#0C513F"
        }
      ],
      "expo-font",
      "expo-image-picker",
      [
        "expo-notifications",
        {
          "icon": "./assets/Images/abx-icon.png",
          "color": "#0C513F",
          "sounds": []
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.60421370220-lm1k6gpsa97edc9adfv32r810jh51p6q"
        }
      ],
      "expo-apple-authentication"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
