{
  "expo": {
    "name": "abx-mobile-application",
    "slug": "abx-mobile-application",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "",
    "scheme": "abxmobileapplication",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
     "extra": {
      "GET_ADDRESS_API_KEY": "LmRcb8Qk50mEojODY5sv3w46906"
    },
    "ios": {
      "supportsTablet": true,
       "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby stores."
      }
    },
    "android": {
        "permissions": ["ACCESS_FINE_LOCATION"],
      "adaptiveIcon": {
        "foregroundImage": "",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {  
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
